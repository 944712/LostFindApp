<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="있어요"
            android:textSize="32dp"
            android:textColor="#92a8d1"
            android:textAlignment="center"/>
        <EditText
            android:id="@+id/titleTxt2"
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:hint="Title..."
            android:backgroundTint="#92a8d1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="습득날짜"
                android:textColor="#b7b4b4"
                android:textSize="19dp"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/findDateBtn2"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/button2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="습득시간"
                android:textColor="#b7b4b4"
                android:textSize="19dp"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/findTimeBtn2"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/button2"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="습득물종류"
                android:textColor="#b7b4b4"
                android:textSize="20dp"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/findWhatBtn"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/button2"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="습득장소"
                android:textColor="#b7b4b4"
                android:textSize="20dp"
                android:layout_gravity="center"/>

            <Spinner
                android:id="@+id/findPlaceDrop"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/button2"
                android:entries="@array/place"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="보관장소"
                android:textColor="#b7b4b4"
                android:textSize="19dp"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/placeEdit"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/button2"
                />
            </LinearLayout>

        <EditText
            android:id="@+id/others"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/button2"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:hint="상태 및 특징 작성"
            />
        <ImageView
            android:id="@+id/ivCapture2"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/button2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.24">

            <ImageButton
                android:id="@+id/cameraBtn2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle"
                android:src="@drawable/camera"
                android:scaleType="center"/>

            <ImageButton
                android:id="@+id/uploadBtn2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle"
                android:src="@drawable/up2"
                android:scaleType="center"
                android:layout_marginLeft="175dp"/>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>