<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_textview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:textColor="@color/colorPrimary"
        android:padding="5dp"
        /> //제목

    <LinearLayout
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="20dp">
        <TextView
            android:id="@+id/date_textview"
            android:layout_width="170dp"
            android:layout_height="20dp"
            android:paddingLeft="5dp"
            android:textColor="@color/colorPrimary"
            /> //습득날짜

        <TextView
            android:id="@+id/time_textview"
            android:layout_width="170dp"
            android:layout_height="20dp"
            android:paddingLeft="5dp"
            android:textColor="@color/colorPrimary"
            /> //습득시간
    </LinearLayout>

    <ImageView
        android:id="@+id/profile_imageview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:paddingLeft="5dp">
    <TextView
        android:id="@+id/what_textview"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:textColor="@color/colorPrimary" /> //습득물종류
    <TextView
        android:id="@+id/findPlaceDrop_txt"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:textColor="@color/colorPrimary"/>//습득장소
    <TextView
        android:id="@+id/placeEdit_txt"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:textColor="@color/colorPrimary"/>//보관장소

</LinearLayout>
    <TextView
        android:id="@+id/content_textview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:padding="10dp"
        />//내용

</LinearLayout>